{
    "name": "farad-tech/laravel-auto-shield",
    "description": "Laravel Auto IP Blocker - A lightweight Laravel package that automatically detects suspicious request patterns and blocks malicious IP addresses.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FaradTech\\LaravelAutoShield\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Farhad Karami",
            "email": "farhadkarami@yahoo.com"
        }
    ],
    "require": {
        "illuminate/support": "^12.41",
        "illuminate/http": "^12.41"
    },
    "extra": {
        "laravel": {
            "providers": [
                "FaradTech\\LaravelAutoShield\\LaravelAutoShieldServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.8"
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/phpunit"
        ]
    }
}